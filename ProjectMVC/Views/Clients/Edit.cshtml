@model Client


@{

    ViewData["Title"] = "Edit Client";
}

<p class="h1 text-center text-dark">Edit Client</p>
<hr/>
<div class="row">
<div class="col-sm-8 offset-4">
    <form asp-action="Edit" class="col-6">
        <div asp-validation-summary="ModelOnly" clas="text-danger"></div>
        <div class="form-group ">
            <label asp-for="CompanyName" class="control-label"></label>
            <input asp-for="CompanyName" class="form-control"/>
            <span asp-validation="EmployeeFullName" clas="text-danger"></span>
        </div>

        <div class="form-group ">
            <label asp-for="CompanyEmail" class="control-label"></label>
            <input asp-for="CompanyEmail" class="form-control"/>
            <span asp-validation="EmployeeEmail" clas="text-danger"></span>
        </div>

        <div class="form-group ">
            <input type="submit" value="Update" class="btn btn-primary float-right"/>
            <a class="btn btn-info" asp-action="Index">Back</a>
        </div>
        <input asp-for="ClientId" class="form-control" hidden/>

    </form>
    </div>
</div>
