@model Employee


@{

    ViewData["Title"] = "Delete Employee";
}


<p class="h1 text-center text-dark">Delete Employee</p>
<hr />
<div class="row">
    <div class="col-sm-8 offset-4">
        <form class="col-6">
            <div class="form-group ">
                <label asp-for="EmployeeFullName" class="control-label"></label>
                <input asp-for="EmployeeFullName" class="form-control" readonly="readonly" />
                <span asp-validation="EmployeeFullName" clas="text-danger"></span>
            </div>

            <div class="form-group ">
                <label asp-for="EmployeeEmail" class="control-label"></label>
                <input asp-for="EmployeeEmail" class="form-control" readonly="readonly" />
                <span asp-validation="EmployeeEmail" clas="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="EmployeeMobilePhone" class="control-label"></label>
                <input asp-for="EmployeeMobilePhone" class="form-control" readonly="readonly" />
                <span asp-validation="EmployeeMobilePhone" clas="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="DepartmentNumber" class="control-label"></label>
                <input asp-for="DepartmentNumber" class="form-control" readonly="readonly" />
                <span asp-validation="DepartmentNumber" clas="text-danger"></span>
            </div>
            <div class="form-group ">
                <form asp-action="DeleteConfirm">
                    <input type="hidden" asp-for="EmployeeId" />
                    <input type="submit" value="Remove" class="btn btn-danger float-right" />
                </form>

                <a class="btn btn-info" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>
